<%= form_with model: article do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% if @article.errors.any? %>

      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
       <% end %>
      <% end %> 
    </div>
  
    <div>
      <%= form.label :body %><br>
      <%= form.text_area :body %><br>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
    <%= form.check_box :article_type, as: :boolean %>
    </div>

    <div>
      <%= form.label :Email %><br>
      <%= form.text_field :email %><br>
      <% article.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
        <% end %> 
      <%= form.label :EmailConfirmation %><br>
      <%= form.text_field :email_confirmation %><br>
      <% article.errors.full_messages_for(:email_confirmation).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %> <br>
  </div>
  
  <div>  
  <%= form.submit %>
</div>

  <% end %>

